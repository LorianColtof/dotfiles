[core]
    editor = vim
[push]
    default = simple
[diff]
	tool = vimdiff
[pull]
	rebase = true
[alias]
    get = "!git stash && git pull --rebase && git stash pop"
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    fatus = "!git fetch && git status"
